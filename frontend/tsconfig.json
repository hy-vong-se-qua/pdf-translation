{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ]
    },
    "module": "esnext",
    "skipLibCheck": true,
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
  ],
  "angularCompilerOptions": {
    "enableIvy": true,
  }
}
