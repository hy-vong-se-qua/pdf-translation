# EditorConfig is awesome: http://EditorConfig.org

# Đây là file thiết lập gốc
root = true

# Newline theo chuẩn Unix và luôn có dòng mới ở cuối file
[*]
end_of_line = lf
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 4
charset = utf-8

[*.css]
indent_style = space
indent_size = 4
charset = utf-8

[*.ts]
indent_style = space
indent_size = 2
charset = utf-8

[*.java]
indent_style = tab
indent_size = 4
charset = utf-8

[*.xml]
indent_style = tab
indent_size = 4
charset = utf-8

[package.json]
indent_style = space
indent_size = 2
